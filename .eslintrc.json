{
    "env": {
        "browser": true,
        "es2021": true,
        "jasmine": true,
        "codeceptjs/codeceptjs" : true
    },
    "extends": [
        "standard",
        "plugin:codeceptjs/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "no-var":"off",
        "no-unused-expressions" : "off",
        "no-sequences" : "off",
        "no-undef" : "off",
        "no-mixed-operators" : "off",
        "no-void" : "off",
        "eqeqeq" : "off",
        "new-cap" : "off",
        "no-cond-assign" : "off",
        "no-redeclare" : "off",
        "no-useless-call" : "off",
        "prefer-const" : "off",
        "no-return-assign" : "off",
        "prefer-promise-reject-errors":"off",
        "promise/param-names" : "off"

        
    },
    "plugins": ["jasmine", "codeceptjs"]
}
